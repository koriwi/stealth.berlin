---
import { getCollection } from "astro:content";
import Hr from "../components/Hr.astro";
import PostPreview from "../components/PostPreview.astro";
import Default from "../layouts/Default.astro";
const posts = await getCollection("posts");
const sortedPost = posts.sort((a,b) => a.data.pubDate.getTime() - b.data.pubDate.getTime())
const newestPost = sortedPost.at(-1);
---

<!DOCTYPE html>
<Default title="Faszination EDF">
  {
    newestPost && (
      <h1 class="text-center mb-0">Aktuell</h1>
      <Hr />
      <PostPreview post={newestPost} />
    )
  }
</Default>
